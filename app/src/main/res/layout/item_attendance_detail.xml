<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium_size_14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="@dimen/margin_xxlarge_size_62"
            android:layout_height="@dimen/margin_xxlarge_size_62"
            android:background="@drawable/bg_round_rectangle"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xxlarge_size_32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xmedium_size_23"
            android:layout_toRightOf="@+id/tv_number"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="10 September 2022"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xmedium_size_18" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/cource_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xmedium_size_18" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>