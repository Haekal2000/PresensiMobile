<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="@dimen/margin_medium_size_16"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="@dimen/margin_xxlarge_size_73"
            android:layout_height="@dimen/margin_xxlarge_size_73"
            android:background="@drawable/bg_round"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="100%"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large_size_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xmedium_size_23"
            android:layout_toRightOf="@+id/tv_percent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_course_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/cource_code"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xmedium_size_18" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/cource_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xmedium_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/gray_darker"
                    android:textSize="@dimen/text_medium_size_15" />

                <TextView
                    android:id="@+id/tv_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_small_size_10"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/gray_darker"
                    android:textSize="@dimen/text_medium_size_15" />

                <TextView
                    android:id="@+id/tv_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_small_size_10"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/gray_darker"
                    android:textSize="@dimen/text_medium_size_15" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>