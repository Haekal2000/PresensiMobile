<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_attendance_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.views.AttendanceDetailActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_small_size_10"
        android:layout_marginLeft="@dimen/margin_small_7"
        android:src="@drawable/ic_left_arrow"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_large_113">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_xsmall_1"
            android:layout_centerVertical="true"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="@dimen/margin_xxxlarge_size153"
            android:layout_height="@dimen/margin_xxxlarge_size153"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="100%"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xxxlarge_size_40" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_attendance_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xmedium_size_27"
        tools:listitem="@layout/item_attendance_detail"
        android:paddingLeft="@dimen/margin_medium_size_18"
        android:paddingRight="@dimen/margin_medium_size_18"/>
</LinearLayout>