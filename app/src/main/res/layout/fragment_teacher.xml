<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_teacher_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.teacherHome.views.TeacherFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_medium_size_16"
        android:paddingRight="@dimen/margin_medium_size_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_welcome_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xmedium_size_33"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/welcome"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large_size_20" />

                <TextView
                    android:id="@+id/tv_user_nik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xmedium_size_33"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large_size_20" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_welcome"
                android:layout_marginTop="@dimen/margin_small_9"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/biru_cyan">

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_xmedium_size_24"
                    android:layout_marginRight="@dimen/margin_medium_size_15"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Monday,"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge_size_36" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_day"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_medium_size_15"
                    android:layout_marginBottom="@dimen/margin_xmedium_size_24"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="19 September 2022"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge_size_36" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_teacher_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_xmedium_size_34"
            android:orientation="vertical"
            android:paddingLeft="@dimen/text_xmedium_size_16"
            android:paddingRight="@dimen/text_xmedium_size_16"
            tools:listitem="@layout/item_teacher_course" />
    </LinearLayout>
</LinearLayout>